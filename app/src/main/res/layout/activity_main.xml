<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="223dp"
        android:layout_height="116dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="-76dp"
        android:layout_marginRight="-76dp"
        android:src="@drawable/convert"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="164dp"
        android:text="Amount"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <EditText
        android:id="@+id/mont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/montant"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="-16dp"
        android:ems="10"
        android:inputType="number"
        tools:ignore="Autofill,InvalidId,LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck"/>


    <TextView
        android:id="@+id/To"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/montant"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="224dp"
        android:text="To"
        tools:ignore="HardcodedText"/>

    <Spinner
        android:id="@+id/to"

        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/To"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-3dp"
        tools:ignore="RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <TextView
        android:id="@+id/From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/To"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="291dp"
        android:text="From"
        tools:ignore="HardcodedText"/>

    <Spinner
        android:id="@+id/from"

        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/From"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-4dp"
        tools:ignore="RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="379dp"
        android:text="Convert"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="113dp"
        android:text="Value"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/value"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/button"
        android:rotationX="0"
        android:text="text"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>